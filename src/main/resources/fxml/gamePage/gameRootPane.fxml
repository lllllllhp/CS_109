<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<StackPane stylesheets="@../../styles/style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lllllllhp.controller.gamePage.GameRootPaneController">
   <children>
      <ImageView fitHeight="458.0" fitWidth="811.0" opacity="0.7" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../image/gameBackground.png" />
         </image>
      </ImageView>
      <Pane fx:id="winPane" focusTraversable="true" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="300.0" prefWidth="300.0" visible="false">
         <children>
            <Button fx:id="returnToMain" layoutX="90.0" layoutY="226.0" mnemonicParsing="false" onAction="#returnToMainPage" prefHeight="46.0" prefWidth="122.0" text="Return">
               <font>
                  <Font name="Century Gothic" size="20.0" />
               </font>
            </Button>
            <Label fx:id="totalSteps" alignment="CENTER" layoutX="53.0" layoutY="131.0" prefHeight="39.0" prefWidth="195.0" text="Steps:">
               <font>
                  <Font name="Century Gothic" size="20.0" />
               </font>
            </Label>
            <Label alignment="CENTER" contentDisplay="CENTER" layoutX="85.0" layoutY="45.0" prefHeight="39.0" prefWidth="131.0" text="YOU WIN!!">
               <font>
                  <Font name="Century Gothic" size="23.0" />
               </font>
            </Label>
         </children>
      </Pane>
      <Pane fx:id="pagePane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onKeyPressed="#handleKeyPress" onMouseClicked="#handleMouseClick" prefHeight="450.0" prefWidth="800.0">
         <children>
            <Pane fx:id="operatePane" layoutX="475.0" layoutY="33.0">
               <children>
                  <Pane prefHeight="83.0" prefWidth="247.0" styleClass="transparent-container">
                     <children>
                        <Label fx:id="timerLabel" alignment="CENTER" layoutY="3.0" prefHeight="39.0" prefWidth="247.0" style="-fx-font-size: 30;" text="Time: " />
                        <Label fx:id="stepCounter" alignment="CENTER" focusTraversable="false" layoutY="42.0" prefHeight="39.0" prefWidth="247.0" style="-fx-font-size: 30;" text="Steps: " />
                     </children>
                  </Pane>
                  <Pane layoutX="24.0" layoutY="327.0" prefHeight="61.0" prefWidth="200.0">
                     <children>
                        <Button fx:id="downButton" alignment="CENTER" focusTraversable="false" layoutX="73.0" layoutY="33.0" mnemonicParsing="false" onAction="#downButton" styleClass="pixel-smallButton" text="DOWN" />
                        <Button fx:id="upButton" alignment="CENTER" focusTraversable="false" layoutX="75.0" layoutY="2.0" mnemonicParsing="false" onAction="#upButton" prefHeight="23.0" prefWidth="52.0" styleClass="pixel-smallButton" text="UP" />
                        <Button fx:id="leftButton" alignment="CENTER" focusTraversable="false" layoutY="33.0" mnemonicParsing="false" onAction="#leftButton" prefHeight="23.0" prefWidth="52.0" styleClass="pixel-smallButton" text="LEFT" />
                        <Button fx:id="rightButton" alignment="CENTER" focusTraversable="false" layoutX="150.0" layoutY="33.0" mnemonicParsing="false" onAction="#rightButton" styleClass="pixel-smallButton" text="RIGHT" />
                     </children>
                  </Pane>
                  <Pane layoutY="97.0">
                     <children>
                        <Button focusTraversable="false" mnemonicParsing="false" onAction="#handleUndo" prefHeight="49.0" prefWidth="121.0" styleClass="pixel-midButton" text="Undo" />
                        <Button focusTraversable="false" layoutY="71.0" mnemonicParsing="false" onAction="#handleRestart" prefHeight="49.0" prefWidth="121.0" styleClass="pixel-midButton" text="Restart">
                           <font>
                              <Font name="Century Gothic" size="20.0" />
                           </font>
                        </Button>
                        <Button focusTraversable="false" layoutY="142.0" mnemonicParsing="false" onAction="#handleSave" prefHeight="49.0" prefWidth="121.0" styleClass="pixel-midButton" text="Save">
                           <font>
                              <Font name="Century Gothic" size="20.0" />
                           </font>
                        </Button>
                        <Button focusTraversable="false" layoutX="126.0" layoutY="142.0" mnemonicParsing="false" onAction="#handleReturn" prefHeight="49.0" prefWidth="121.0" styleClass="pixel-midButton" text="return">
                           <font>
                              <Font name="Century Gothic" size="20.0" />
                           </font>
                        </Button>
                        <Button focusTraversable="false" layoutX="126.0" layoutY="71.0" mnemonicParsing="false" onAction="#handleSolve" prefHeight="49.0" prefWidth="121.0" styleClass="pixel-midButton" text="solve">
                           <font>
                              <Font name="Century Gothic" size="20.0" />
                           </font>
                        </Button>
                     </children>
                  </Pane>
               </children>
            </Pane>
            <Pane fx:id="gamePane" focusTraversable="true" prefHeight="450.0" prefWidth="450.0" />
            <ScrollPane layoutX="599.0" layoutY="163.0" prefHeight="200.0" prefWidth="200.0" visible="false" />
         </children>
      </Pane>
   </children>
</StackPane>
